<div class="w-50 mt-4" style="margin-left: 25%">
    <div class="text-center"><h1>Login Users</h1></div>
    {{#if error}}
        <div class="alert alert-danger m-4" role="alert">{{error}}</div>
    {{/if}}
    <form class="m-4" method="post" action="/users/login">
        <div class="mt-2">
            <label class="form-label" for="firstname">Firstname</label>
            <input class="form-control" type="text" id="firstname" name="firstname" placeholder="enter your firstname" autocomplete="off" required>
        </div>
        <div class="mt-2">
            <label class="form-label" for="surname">Surname</label>
            <input class="form-control" type="text" id="surname" name="surname" placeholder="enter your surname" autocomplete="off" required>
        </div>
        <div class="mt-2">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" placeholder="enter your password" autocomplete="off" required>
        </div>
        <button type="submit" class="btn btn-success mt-4 w-100">login</button>
    </form>
</div>