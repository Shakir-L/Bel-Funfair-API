<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Project Prizes</title>
    <meta name="description" content="Project prizes">
    <meta name="author" content="MaximeTHEVENEAU">
    <link href="/css/bootstrap.css" rel="stylesheet" >
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="/css/index.css" rel="stylesheet" >
    <script src="/js/bootstrap.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <style>
        html,body
        {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            scroll-behavior: smooth;
        }
    </style>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container m-0">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse text-light" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                {{#if id}}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/users/logout">Logout</a>
                    </li>
                {{else}}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/users/login">Login</a>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>
    <h5 class="text-light">{{firstname}} {{surname}}</h5>
</nav>

{{#if flashMessages.success}}
    <div class="flashes w-50 mt-2 text-center" style="margin-left: 25%">
        <div class="alert alert-success">
            {{flashMessages.success}}
        </div>
    </div>
{{/if}}
{{#if flashMessages.error}}
    <div class="flashes w-50 mt-2 text-center" style="margin-left: 25%">
        <div class="alert alert-danger">
            {{flashMessages.error}}
        </div>
    </div>
{{/if}}


{{{body}}}

</body>
</html>

